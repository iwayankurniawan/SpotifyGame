<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/blackbackground"
    android:layout_height="match_parent">

    <TextView
        android:text="PLAYING FROM ARTIST"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playingfrom"
        android:textSize="18dp"
        android:textColor="@color/greyletter"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/nameartist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/playingfrom"
        android:layout_centerHorizontal="true"
        android:paddingBottom="10dp"
        android:text="Luis Fonzi"
        android:textColor="@color/greyletter"
        android:textSize="18dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_below="@+id/nameartist"
        android:layout_centerHorizontal="true"
        android:src="@drawable/despacito"
        android:paddingBottom="10dp"/>

    <TextView
        android:paddingTop="10dp"
        android:id="@+id/songtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:text="Despacito"
        android:textColor="@color/whiteletter"
        android:textSize="27dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/nameartist2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/songtitle"
        android:layout_centerHorizontal="true"
        android:paddingBottom="20dp"
        android:text="Luis Fonzi"
        android:textColor="@color/whiteletter"
        android:textSize="18dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/seekbargroup"
        android:paddingTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/nameartist2">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/greyletter"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:layout_weight="0.5"
            android:id="@+id/textView2" />

        <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:id="@+id/seekBar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/greyletter"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:layout_weight="0.5"
            android:id="@+id/textView3"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/random"
            android:layout_marginLeft="10dp"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_weight="0.5"
            android:layout_gravity="center_vertical"
            android:background="@drawable/random" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="10">

            <Button
                android:layout_marginLeft="10dp"
                android:layout_width="50dp"
                android:layout_height="90dp"
                android:background="@drawable/previous"
                android:id="@+id/button4"
                android:layout_weight="1"/>

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="70dp"
                android:text="play"
                android:layout_gravity="center_vertical"
                android:background="@drawable/pause"
                android:id="@+id/button3"
                android:layout_weight="5"/>

            <Button
                android:layout_marginRight="10dp"
                android:layout_width="50dp"
                android:layout_height="90dp"
                android:id="@+id/button"
                android:background="@drawable/next"
                android:layout_weight="1"/>

        </LinearLayout>

        <Button
            android:id="@+id/play"
            android:layout_marginRight="10dp"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_weight="0.5"
            android:layout_gravity="center_vertical"
            android:background="@drawable/game1" />

    </LinearLayout>


</RelativeLayout>