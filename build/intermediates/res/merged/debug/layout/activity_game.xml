<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context="com.wawan.SpotifyGame.Home">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Perfect Song \nTo Play in Friday Afternoon"
                android:textColor="@color/whiteletter"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/despacito"
                    android:layout_width="175dp"
                    android:layout_height="175dp"
                    android:background="@drawable/timecapsule" />

                <ImageButton
                    android:id="@+id/discover"
                    android:layout_width="175dp"
                    android:layout_height="175dp"
                    android:background="@drawable/discoverweekly" />

            </LinearLayout>

            <ImageButton
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:id="@+id/chart"
                android:background="@drawable/charts"/>

            <ImageButton
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:id="@+id/newrelases"
                android:background="@drawable/newreleases"/>

            <ImageButton
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:id="@+id/gamediscover"
                android:background="@drawable/discover"/>

            <ImageButton
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:id="@+id/tournament"
                android:background="@drawable/tournament"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/home"
                android:layout_width="wrap_content"
                android:layout_height="59dp"
                android:layout_weight="1"
                android:background="@drawable/homeunclicked" />

            <ImageButton
                android:id="@+id/browse"
                android:layout_width="wrap_content"
                android:layout_height="59dp"
                android:layout_weight="1"
                android:background="@drawable/browseunclicked" />

            <ImageButton
                android:id="@+id/search"
                android:layout_width="wrap_content"
                android:layout_height="59dp"
                android:layout_weight="1"
                android:background="@drawable/searchunclicked" />

            <ImageButton
                android:id="@+id/game"
                android:layout_width="100dp"
                android:layout_height="59dp"
                android:layout_weight="1"
                android:background="@drawable/gameclicked" />

            <ImageButton
                android:id="@+id/radio"
                android:layout_width="wrap_content"
                android:layout_height="59dp"
                android:layout_weight="1"
                android:background="@drawable/radiounclicked" />

            <ImageButton
                android:id="@+id/library"
                android:layout_width="wrap_content"
                android:layout_height="59dp"
                android:layout_weight="1"
                android:background="@drawable/libraryunclicked" />

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>